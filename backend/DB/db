use('zoologico');
db.createCollection('animales', {
    validator: {
        $jsonSchema: {
            bsonType: 'object',
            required: [
                "id",
                "nombre",
                "edad",
                "genero",
                "habitat_zoo",
                "cuidados",
                "relacion_animales",
                "estado_salud",
                "historia",
                "interaccion_humanos",
                "enlaces_geneticos",
                "detalles",
            ],
            properties: {
                id: {
                    bsonType: 'int', //32 bits
                    description: 'Identify animal bust be interger type'
                },
                nombre: {
                    bsonType: 'string',
                    pattern: '^[A-Za-zÁáÉéÍíÓóÚúÑñ\s]+$',
                    description: 'Animal name must be of type string'
                },
                edad: {
                    bsonType: 'int',
                    description: 'Edad field must be of type interger'
                },
                genero: {
                    bsonType: 'string',
                    enum: ['macho', 'hembra'],
                    description: 'genero field must be of or macho hembra'
                },
                habitat_zoo: {
                    bsonType: 'int',
                    description: 'habitat must be of type interger, is a fk'
                },
                cuidados: {
                    bsonType: 'string',
                    description: 'cuidados field must be of type string'
                },
                relacion_animales: {
                    bsonType: 'string',
                    description: 'relatoin with others animals field must be of type string'
                },
                estado_salud: {
                    bsonType: 'string',
                    enum: [
                        'Bueno', 
                        'Malo',
                        'Cautela',
                        'En observación',
                        'Regular',
                        'Preocupante',
                        'Grave',
                        'Terminal'],
                    description: 'health status must be of type string, Bueno, Malo, Cautela, En, Regular, Preocupante, Grave, Terminal,'
                },
                historia: {
                    bsonType: 'string',
                    description: 'history field must be of type string'
                },
                interaccion_humanos: {
                    bsonType: 'string',
                    description: 'interaction with humans must be of type string'
                },
                enlaces_geneticos: {
                    bsonType: 'string',
                    description: 'genetic strings field must be of type string'
                },
                detalles: {
                    bsonType: 'object',
                    required: [
                        "nombre_cientifico",
                        "clase",
                        "raza",
                        "especie",
                        "tipo_animal",
                        "invertebrado",
                        "vertebrado",
                        "tipo_habitat",
                        "distribicion_geografica",
                        "comportamiento",
                        "estado_conservacion",
                        "depredadores",
                        "alimento_principal",
                        "curiosidades",
                        "amenazas",
                        "relacion_con_humanos",
                        "importancia_ecologica",
                        "origen",
                    ],
                    properties: {
                        nombre_cientifico: {
                            bsonType: 'string',
                            description: 'ciencist name field must be of type string'
                        },
                        clase: {
                            bsonType: 'string',
                            description: 'class field must be of type string'
                        },
                        raza: {
                            bsonType: 'string',
                            description: 'raza field must be of type string'
                        },
                        especie: {
                            bsonType: 'string',
                            description: 'especie field must be of type string'
                        },
                        tipo_animal: {
                            bsonType: 'string',
                            description: 'animal type must be of type string'
                        },
                        invertebrado: {
                            bsonType: 'bool',
                            description: 'invertebrado field must be of type bool'
                        },
                        vertebrado: {
                            bsonType: 'bool',
                            description: 'vertebrado field must be of type bool'
                        },
                        tipo_habitat: {
                            bsonType: 'string',
                            description: 'habitat type must be of type string'
                        },
                        distribicion_geografica: {
                            bsonType: 'object',
                            required: [
                                "habitat_natural",
                                "region_geografica",
                                "pais",
                                "continente",
                                "ecosistema",
                            ],
                            properties: {
                                habitat_natural: {
                                    bsonType: 'string',
                                    description: 'natural habitat must be of type string'
                                },
                                region_geografica: {
                                    bsonType: 'string',
                                    description: 'geographic region must be of type string'
                                },
                                pais: {
                                    bsonType: 'array',
                                    description: 'country field must be of type array'
                                },
                                continente: {
                                    bsonType: 'string',
                                    description: 'continente field must be of type string'
                                },
                                ecosistema: {
                                    bsonType: 'string',
                                    description: 'ecosistema field must be of type string'
                                }
                            }
                        },
                        comportamiento: {
                            bsonType: 'string',
                            description: 'comportamiento field must be of type string'
                        },
                        estado_conservacion: {
                            bsonType: 'string',
                            enum: [
                                'Exinto en estado salvaje',
                                'En peligro critico',
                                'En peligro',
                                'Vulnerable',
                                'Casi amenazado',
                                'Preocupación Menor',
                                'Datos Insuficientes',
                                'No Evaluado',
                                'Sin amenaza',
                                'Es más, son una plaga xd',
                            ],
                            description: 'conservation status must be of type string and could countain something the it options: Exinto en estado salvaje, En peligro critico, En peligro, Vulnerable, Casi amenazado, Preocupación Menor, Datos Insuficientes, No Evaluado, Sin amenaza, Es más, son una plaga xd',
                        },
                        depredadores: {
                            bsonType: 'array',
                            description: 'depredadores field must be of type array'
                        },
                        alimento_principal: {
                            bsonType: 'array',
                            description: 'alimento_principal field must be of type alimento_principal'
                        },
                        curiosidades: {
                            bsonType: 'string',
                            description: 'curiosidades field must be of type string'
                        },
                        amenazas: {
                            bsonType: 'array',
                            description: 'amenazas field must be of type array'
                        },
                        relacion_con_humanos: {
                            bsonType: 'string',
                            description: 'relationship with humans must be of type string'
                        },
                        importancia_ecologica: {
                            bsonType: 'string',
                            enum: ['Alta', 'Media', 'Baja'],
                            description: 'importancia field must be fo type string'
                        },
                        origen: {
                            bsonType: 'string',
                            description: 'origen field must be of type string'
                        },
                    }
                }
            }
        }
    },

});

